---
const { img, headline, text, direction } = Astro.props;
---

<article class=`${direction}`>
  <img src={img} />
  <div class="content">
    <h3>{headline}</h3>
    <p>{text}</p>
  </div>
</article>

<style>
  img {
    width: 100%;
  }
  article {
    grid-column: span 1;
    display: flex;
    flex-direction: column;
  }
  @media screen and (width >= 768px) {
    h3 {
      font-size:large;
    }
    p {
      font-size: medium;
    }
    article {
      grid-column: span 2;
      display: flex;
      flex-direction: row;
      justify-content: space-around;
      align-items: center;
      gap: 1rem;
    }
    article.left {
      flex-direction: row-reverse;
    }
    img {
      max-width: 40%;
    }
    .content {
      width: 40%;
    }
  }
</style>
